{
  "name": "sbcl-viewer-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:web": "pnpm --filter @sbcl-viewer/web dev",
    "dev:batch": "pnpm --filter @sbcl-viewer/batch dev",
    "build:shared": "pnpm --filter @sbcl-viewer/shared build",
    "build:web": "pnpm --filter @sbcl-viewer/web build",
    "build:batch": "pnpm --filter @sbcl-viewer/batch build",
    "build:all": "pnpm -r build",
    "start:batch": "pnpm --filter @sbcl-viewer/batch start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
